@model MercPlusClient.Areas.ManageMasterData.Models.ManageMasterDataModel

@{
    ViewBag.Title = "CreatePayAgent";
    Layout = "~/Views/Shared/_MercPlusLayout.cshtml";
}

<h2>Add, Update or Delete Pay Agent</h2>
@Html.ActionLink("Tables and Dependencies Help File", "SecNewUser", "ManageUser", new { area = "ManageMasterData" }, null)
@using (Html.BeginForm("CreatePayAgent","ManageMasterData", new { area = "ManageMasterData" },FormMethod.Post))
{
   <table style="width: 700px; vertical-align:text-top;" border="0" cellpadding="5" cellspacing="0"> 
        <tr>
            <td style="text-align: right; vertical-align: top; " class="style3">@Html.LabelFor(model => model.RRISCode)</td>
            <td style="text-align: left; vertical-align: top; " class="style2">@Html.TextBoxFor(model => model.RRISCode)</td>
            <td style="text-align: left; vertical-align: top; width: 200px;">&nbsp;</td>
        </tr>        
        <tr>
            <td style="text-align: right; vertical-align: top; " class="style3">@Html.LabelFor(model => model.RRISFormat)</td>
            <td style="text-align: left; vertical-align: top; " class="style2">@Html.DropDownListFor(model => model.RRISFormat, Model.drpRRISFormat, "Select RRIS Format")</td>
            <td style="text-align: left; vertical-align: top; width: 200px;">&nbsp;</td>
        </tr> 
        <tr>
            <td style="text-align: right; vertical-align: top; " class="style3">@Html.LabelFor(model => model.CorporateProfitCenter)</td>
            <td style="text-align: left; vertical-align: top; " class="style2">@Html.TextBoxFor(model => model.CorporateProfitCenter)</td>
            <td style="text-align: left; vertical-align: top; width: 200px;">&nbsp;</td>
        </tr> 
        <tr>
            <td style="text-align: right; vertical-align: top; " class="style3">@Html.LabelFor(model => model.CorporatePayAgentCode)</td>
            <td style="text-align: left; vertical-align: top; " class="style2">@Html.TextBoxFor(model => model.CorporatePayAgentCode)</td>
            <td style="text-align: left; vertical-align: top; width: 200px;">&nbsp;</td>
        </tr> 
        <tr>
            <td style="text-align: right; vertical-align: top; " class="style3">@Html.LabelFor(model => model.PayAgentProfitCenter)</td>
            <td style="text-align: left; vertical-align: top; " class="style2">@Html.TextBoxFor(model => model.PayAgentProfitCenter)</td>
            <td style="text-align: left; vertical-align: top; width: 200px;">&nbsp;</td>
        </tr>
    </table>
   <table style="width:750px; vertical-align:text-top;" border="0" cellpadding="5" cellspacing="0">
        <tr>
            <td style="text-align: right; vertical-align: top; width: 200px;"><input type="submit" value="Add new Record" name="Add"/></td>
            <td style="text-align: left; vertical-align: top; width: 120px;">            
            <input type = "button" value = "Return to Update" onclick="location.href=''@Url.Action("EditPayAgent", "ManageMasterData", new { area = "ManageMasterData" }, null)''" />
            </td>
            <td style="text-align: left; vertical-align: top; width: 190px;"> &nbsp;</td>
        </tr>          
    </table>   
}
   
       

