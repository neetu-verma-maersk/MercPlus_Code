@model MercPlusClient.Areas.ManageMasterData.Models.ManageMasterDataPayAgentModel


@{
    if (Model.IsUpdate)
    {
        ViewBag.Title = "ViewPayAgentDetails";
    }
    else
    {
        ViewBag.Title = "CreatePayAgent";
    }
    Layout = "~/Views/Shared/_MercPlusLayout.cshtml";
}
<script src="~/Areas/ManageMasterData/Script/PayAgent.js"></script>
<div>
        <div style="float:right;"><a href="~/HelpFiles/help/merc/3_HelpScrns_DoNotChangeStructure/tablemod_payagent_help.htm" target="_blank">
                                   Tables and Dependencies Help File</a></div>
    <br />
        <div style="margin-top:20px;width:750px; ">
            
                    <h2>Add, Update or Delete Pay Agent</h2>
               
        </div>
    <div id="ErrorMsgContainer" style="width: 750px; vertical-align: text-top;"> 
            @Html.Raw(TempData["Msg"] != null ? TempData["Msg"].ToString() : "")
    </div> 
