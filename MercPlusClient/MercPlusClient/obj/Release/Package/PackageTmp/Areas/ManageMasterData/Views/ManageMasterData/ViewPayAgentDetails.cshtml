            </td>
            <td class="style2" style="text-align: left; vertical-align: top;">
                @Html.TextBoxFor(model => model.CorporateProfitCenter, new { id = "txtCorporateProfitCenter",style="text-transform:uppercase;" ,onkeydown="return ValidateNumber(event);",maxlength="2"})
            </td>
            <td style="text-align: left; vertical-align: top; width: 200px;">&nbsp;</td>
        </tr>
        <tr>
            <td class="style3" style="text-align: left; vertical-align: top;">
                @Html.LabelFor(model => model.CorporatePayAgentCenter)
            </td>
            <td class="style2" style="text-align: left; vertical-align: top;">
