               @*<td style="text-align: left; vertical-align: top;" class="style2">
                    @Html.TextBoxFor(model => model.RRISCode, new { style="display:none"})</td>*@
                <td style="text-align: left; vertical-align: top; width: 200px;">&nbsp;
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td style="text-align: left; vertical-align: top;" class="style3">@Html.LabelFor(model => model.RRISCode)</td>
                <td style="text-align: left; vertical-align: top;" class="style2">@Html.TextBoxFor(model => model.RRISCode, new {id="txtRRISCode",style="text-transform:uppercase;",maxlength="3"})</td>
                <td style="text-align: left; vertical-align: top; width: 200px;">&nbsp;</td>
            </tr> 
        }
        <tr>
            <td class="style3" style="text-align: left; vertical-align: top;">
                @Html.LabelFor(model => model.RRISFormat)
