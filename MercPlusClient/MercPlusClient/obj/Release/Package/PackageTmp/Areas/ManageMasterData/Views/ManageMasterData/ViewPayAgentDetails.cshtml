@using (Html.BeginForm())
{
    <table border="0" cellpadding="5" cellspacing="0"
        style="width: 700px; vertical-align: text-top;">
    
        @if (Model.IsUpdate)
        {
            <tr>
                <td class="style3" style="text-align: left; vertical-align: top;">
                    @Html.LabelFor(model => model.RRISCode)
                </td>
                <td class="style2" style="text-align: left; vertical-align: top;">
                    @Html.DropDownListFor(model => model.RRISCode, Model.drpRRISCodesList,"Select RRIS Code ", new { id = "drpRRISCodesList",style="width;500px" })
