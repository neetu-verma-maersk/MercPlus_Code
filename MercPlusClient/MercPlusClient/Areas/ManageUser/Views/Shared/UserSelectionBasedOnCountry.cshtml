@model MercPlusClient.Areas.ManageUser.Models.ManageUserModel
<table style="width: 750px; vertical-align:text-top;" border="0" cellpadding="5" cellspacing="0" id="tblSelectUserToEdit">
    <tr>
        <td style="text-align: left; vertical-align: top; width:200px;">@Html.LabelFor(model => model.CountryDescriptions) <font color="red">*</font></td>
        <td style="text-align: left; vertical-align: top; width: 250px;">      
            @Html.DropDownListFor(model => model.CountryCode, Model.CountryList, "<<--Select a Country-->>", new { id = "CountryCode", style = "width:200px;" })      
        </td>
        <td style="text-align: left; vertical-align: top; width: 300px;">@Html.ValidationMessageFor(model => model.CountryCodeAndDescription)</td>
    </tr>
    <tr>
        <td style="text-align: left; vertical-align: top; width: 200px;">@Html.Label("User") <font color="red">*</font></td>
        <td style="text-align: left; vertical-align: top; width: 250px;">@Html.DropDownListFor(model => Model.UserId, new SelectList(Enumerable.Empty<SelectListItem>(), "UserId", "LoginFirstAndLastName"), "No User Exist For", new { id = "ddlLogin", style = "width:200px;" })</td>
        <td style="text-align: left; vertical-align: top; width: 300px;">@Html.ValidationMessageFor(model => model.Login)</td>
    </tr>
</table>
