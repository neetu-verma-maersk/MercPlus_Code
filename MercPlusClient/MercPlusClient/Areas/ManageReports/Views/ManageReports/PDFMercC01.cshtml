@model MercPlusClient.Areas.ManageReports.Models.ManageReportsModel

@{
    ViewBag.Title = "PDFMercC01";
}

@using (Html.BeginForm())
        {
        <table style="width: 700px; vertical-align:text-top;" border="0" cellpadding="5" cellspacing="0"> 
        <tr>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th colspan="2" style="text-align:center">@Html.DisplayName("MERCC01 – Exclusionary Codes")</th>
            <th>&nbsp;</th>
        </tr> 
        <tr>
            @*<th>&nbsp;</th>
            <th>&nbsp;</th>*@
            <th colspan="6" style="text-align:center">@Html.DisplayName("Report Date " + DateTime.UtcNow.ToString("yyyy-MM-dd hh:mm") + " UTC")</th>
            @*<th>&nbsp;</th>*@
        </tr> 
        <tr>
            <th>&nbsp;</th>
            <th colspan="5">@Html.DisplayName("Exclusionary repair codes (exclusionary repair codes cannot be used on same estimate)")</th>
        </tr> 
        <tr>
            <th>@Html.DisplayNameFor(model => model.Manual)</th>
            <th>@Html.DisplayNameFor(model => model.Mode) </th>
            <th>@Html.DisplayNameFor(model => model.RepairCode)</th>
            <th>@Html.DisplayNameFor(model => model.RepairCodeDescription)</th>
            <th>@Html.DisplayNameFor(model => model.ExclusionaryRepairCode)</th>
            <th>@Html.DisplayNameFor(model => model.ExclusionaryRepairCodeDescription)</th>
        </tr> 
            @foreach (var item in Model.ReportsList)
            {
                
            <tr>
                @if (Model.HiddenManual == item.Manual)
                {
                    item.Manual = string.Empty;
                }
                else
                {
                    Model.HiddenManual = item.Manual;
                }
                @if (Model.HiddenMode == item.Mode)
                {
                    item.Mode = string.Empty;
                }
                else
                {
                    Model.HiddenMode = item.Mode;
                }
                @if (Model.HiddenRepairCode == item.RepairCod)
                {
                    item.RepairCod = string.Empty;
                }
                else
                {
                    Model.HiddenRepairCode = item.RepairCod;
                }
                <td>@Html.DisplayFor(modelItem => item.Manual)</td>
                <td>@Html.DisplayFor(modelItem => item.Mode)</td>
                <td>@Html.DisplayFor(modelItem => item.RepairCod)</td>
                <td>@Html.DisplayFor(modelItem => item.RepairCodeDesc)</td>
                <td>@Html.DisplayFor(modelItem => item.ExclusionaryRepairCode)</td>
                <td>@Html.DisplayFor(modelItem => item.ExclusionaryRepairCodeDescription)</td>
            </tr> 
            }
    </table>
    }
