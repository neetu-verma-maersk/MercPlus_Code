@model MercPlusClient.Areas.ManageMasterData.Models.ManageMasterDataModel

@{
    ViewBag.Title = "CreateEquipmentTypeEntry";
    Layout = "~/Views/Shared/_MercPlusLayout.cshtml";
}


<h2>Update or Add New Equipment Type</h2>
@*<asp:LinkButton ID = "lnk" Text = "Tables and Dependencies Help File" style="margin-left: 550px" runat="server"></asp:LinkButton>*@
@using (Html.BeginForm("CreateEquipmentTypeEntry","ManageMasterData", new { area = "ManageMasterData" }, FormMethod.Post))
{
   <table style="width: 700px; vertical-align:text-top;" border="0" cellpadding="5" cellspacing="0"> 
        <tr>
            <td style="text-align: right; vertical-align: top; " class="style3">@Html.Label("Equipemnt Type")</td>
            <td style="text-align: left; vertical-align: top; " class="style2">@Html.TextBoxFor(model => model.txtEquipmentType)</td>
            <td style="text-align: left; vertical-align: top; width: 200px;">&nbsp;</td>
        </tr>        
       
        <tr>
            <td style="text-align: right; vertical-align: top; " class="style3">@Html.Label("Equipment Description")</td>
            <td style="text-align: left; vertical-align: top; " class="style2">@Html.TextBoxFor(model => model.EquipmentDescription)</td>
            <td style="text-align: left; vertical-align: top; width: 200px;">&nbsp;</td>
        </tr> 
    </table>
   <table style="width:750px; vertical-align:text-top;" border="0" cellpadding="5" cellspacing="0">
        <tr>
            <td style="text-align: right; vertical-align: top; width: 200px;"><input type="submit" value="Add new Record" name="Add"/></td>
            <td style="text-align: left; vertical-align: top; width: 120px;">            
            <input type = "button" value = "Return to Update" onclick="location.href=''@Url.Action("EditEquipmentTypeEntry", "ManageMasterData", new { area = "ManageMasterData" }, null)''" />
            </td>
            <td style="text-align: left; vertical-align: top; width: 190px;"> &nbsp;</td>
        </tr>          
    </table>   
}
   
