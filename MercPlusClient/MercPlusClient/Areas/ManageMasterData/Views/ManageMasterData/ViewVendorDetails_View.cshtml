                <td class="style2" style="text-align: left; vertical-align: top;">
                    @Html.TextBoxFor(model => model.ChangeTimeVendor, new { id = "ChangeTimeVendor", @Value="N/A", @disabled=true, style= "width:170px;background-color:#DCDCDC!important;", @readonly = true  })
