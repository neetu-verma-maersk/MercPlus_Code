                <td class="style3" style="text-align: left; vertical-align: top;" colspan="3">
                    @Html.LabelFor(model => model.ShopCode_ShopContract)<span style="color:Red;">*</span>
                    <br />
                    @if(Model.IsUpdate==true)
                    {
                        @Html.DropDownListFor(model => model.ShopCode_ShopContract, Model.DDLShop_ShopContract, new { id = "drpShop", @disabled=true, style="width:150px;" })
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.ShopCode_ShopContract, Model.DDLShop_ShopContract, new { id = "drpShop", style="width:150px;" })
                    }
                   
                </td>
               
            </tr>
       
            <tr>
                
                <td class="style3" style="text-align: left; vertical-align: top;" colspan="3">
                    @Html.LabelFor(model => model.ManualCode_ShopContract)<span style="color:Red;">*</span>
                    <br />
                    @if(Model.IsUpdate==true)
                    {
                        @Html.DropDownListFor(model => model.ManualCode_ShopContract, Model.DDLManual_ShopContract, new { id = "drpManual", @disabled=true, style="width:300px;" })
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.ManualCode_ShopContract, Model.DDLManual_ShopContract, new { id = "drpManual" , style="width:300px;"})
                    }
                    
                </td>
               
            </tr>

