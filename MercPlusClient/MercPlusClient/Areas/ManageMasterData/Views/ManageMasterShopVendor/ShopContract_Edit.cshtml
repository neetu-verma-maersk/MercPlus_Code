                        {
                             @Html.TextBox("txtEffecDate",Model.EffectiveDate_ShopContract.ToString("yyyy-MM-dd"),new {style="width:140px;", @class="CLSDTFROM", id="txtEffectiveDate"})
                         
                        }
                        else
                        {
