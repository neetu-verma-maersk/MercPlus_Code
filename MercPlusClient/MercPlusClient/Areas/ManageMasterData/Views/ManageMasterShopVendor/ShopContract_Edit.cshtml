                        @Html.LabelFor(model => model.RepairCode_ShopContract)<span style="color:Red;">*</span>
                    <br />
                         @if(Model.IsUpdate==true)
                         {
                            @Html.TextBoxFor(model => model.RepairCode_ShopContract, new { id = "txtRepairCode", @disabled=true })
                         }
                        else
                        {
                             @Html.TextBoxFor(model => model.RepairCode_ShopContract, new { id = "txtRepairCode" })
                         }
                        
                    </td>
                    
            
                    <td class="style3" style="text-align: left; vertical-align: top;" nowrap="nowrap">
                        @Html.LabelFor(model => model.Amount_ShopContract) <span style="color:Red;">*</span>
                    <br />
                        @Html.TextBoxFor(model => model.Amount_ShopContract, new { id = "txtAmount" })
                        
                    </td>
                 <td class="style3" style="text-align: left; vertical-align: top;" nowrap="nowrap">
                        @Html.LabelFor(model => model.Currency_ShopContract)
                    <br />
                     @if(Model.IsUpdate==true)
                     {
                         @Html.TextBoxFor(model => model.Currency_ShopContract, new { id = "txtCurrencyAmount", @disabled=true })
